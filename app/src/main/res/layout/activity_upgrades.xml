<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpgradesActivity">

    <ImageView
        android:id="@+id/mainBackground2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bg7" />

    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_mono_light"
                android:gravity="center"
                android:text="@string/title_activity_upgrades"
                android:textColor="#FFFFFF"
                android:textSize="48sp" />

            <LinearLayout
                android:id="@+id/upgrade1layout"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:background="@drawable/bg10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleX="0.95"
                    android:scaleY="0.95"
                    app:srcCompat="@drawable/noborder_click" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upgrade1name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/upgrade1name"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/dm_mono_light"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/upgrade1desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/upgrade1desc"
                        android:fontFamily="@font/dm_mono_light"
                        android:textColor="#FFE500" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/upgrade1cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/upgradelvltext"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/up1currlvl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:fontFamily="@font/dm_mono_light"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="TextView"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/upgrade1next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/upgradelvlcost"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/up1nextlvl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="TextView"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColor="#FFFFFF"
                            android:textColorLink="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/up1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/upgrade_button"
                        android:textColor="#2196F3"
                        android:fontFamily="@font/dm_mono_light"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/upgrade2layout"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:background="@drawable/bg10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleX="0.95"
                    android:scaleY="0.95"
                    app:srcCompat="@drawable/combo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upgrade2name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/upgrade2name"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/dm_mono_light"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/upgrade2desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_mono_light"
                        android:gravity="center"
                        android:text="@string/upgrade2desc"
                        android:textColor="#FFE500"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/upgrade2cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/upgradelvltext"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/up2currlvl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="TextView"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/upgrade2next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/upgradelvlcost"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/up2nextlvl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="TextView"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColorLink="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/up2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/upgrade_button"
                        android:textColor="#2196F3"
                        android:fontFamily="@font/dm_mono_light"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upgrade3layout"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:background="@drawable/bg10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleX="0.95"
                    android:scaleY="0.95"
                    android:fontFamily="@font/dm_mono_light"
                    app:srcCompat="@drawable/tickrate" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upgrade3name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/upgrade3name"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/dm_mono_light"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/upgrade3desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/upgrade3desc"
                        android:fontFamily="@font/dm_mono_light"
                        android:textColor="#FFE500" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/upgrade3cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/upgradelvltext"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/up3currlvl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="TextView"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/upgrade3next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/upgradelvlcost"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/up3nextlvl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="TextView"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/dm_mono_light"
                            android:textColorLink="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/up3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/upgrade_button"
                        android:textColor="#2196F3"
                        android:fontFamily="@font/dm_mono_light"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upgrade4layout"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:background="@drawable/bg10"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="gone" />

            <LinearLayout
                android:id="@+id/upgrade5layout"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:background="@drawable/bg10"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/upperBackground2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg6" />

    <TextView
        android:id="@+id/cookiesCount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textColorLink="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/dm_mono_light"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/crystal2"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/cookiesCount2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg4" />

</androidx.constraintlayout.widget.ConstraintLayout>